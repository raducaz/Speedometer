<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:showDividers="middle"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:showDividers="middle"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="TRIP"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:padding="1dip"/>

        <Button
            android:layout_width="wrap_content"
            android:text="@string/terminal_activity_reset_trip"
            android:layout_centerVertical="true"
            android:id="@+id/buttonResetTrip"
            android:layout_height="wrap_content"
            android:onClick="resetTrip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:showDividers="middle"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:showDividers="middle"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/border"
            android:padding="1dip">
            <TextView
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="SPEED"
                android:layout_width="match_parent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:showDividers="middle"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/speedText"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="40sp"
                    android:textAlignment="center"
                    android:text="00,0"
                    android:layout_width="match_parent" />
                <TextView
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:text="km/h"
                    android:layout_width="match_parent" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:showDividers="middle"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="1dip"
            android:orientation="vertical">
            <TextView
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="DIST"
                android:layout_width="match_parent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:showDividers="middle"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/distText"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="40sp"
                    android:textAlignment="center"
                    android:text="0,00"
                    android:layout_width="match_parent" />
                <TextView
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textSize="30sp"
                    android:text="km"
                    android:layout_width="match_parent" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:showDividers="middle"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:padding="1dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:showDividers="middle"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="TIME"
                android:layout_width="match_parent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:showDividers="middle"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/timeText"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="40sp"
                    android:textAlignment="center"
                    android:text="0h 00m:00s"
                    android:layout_width="match_parent" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:showDividers="middle"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:showDividers="middle"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="1dip"
            android:orientation="vertical">
            <TextView
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Avg SPEED"
                android:layout_width="match_parent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:showDividers="middle"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/avgSpeedText"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="40sp"
                    android:textAlignment="center"
                    android:text="00,0"
                    android:layout_width="match_parent" />
                <TextView
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:text="km/h"
                    android:layout_width="match_parent" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:showDividers="middle"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="1dip"
            android:orientation="vertical">
            <TextView
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:textAlignment="center"
                android:text="Max SPEED"
                android:textStyle="bold"
                android:layout_width="match_parent" />
            <LinearLayout
                android:layout_width="match_parent"
                android:showDividers="middle"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/maxSpeedText"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textSize="40sp"
                    android:textAlignment="center"
                    android:text="00,0"
                    android:layout_width="match_parent" />
                <TextView
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="30sp"
                    android:text="km/h"
                    android:layout_width="match_parent" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:showDividers="middle"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <EditText android:id="@+id/sendText"
            android:layout_weight="1"
            android:maxLines="1"
            android:text="15;1000;1730;12000"
            android:inputType="textNoSuggestions|textVisiblePassword"
            android:imeOptions="flagNoExtractUi|actionSend"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dip"></EditText>

        <Button android:layout_width="wrap_content"
            android:text="@string/terminal_activity_send"
            android:layout_centerVertical="true"
            android:id="@+id/buttonSend"
            android:layout_height="match_parent"
            android:onClick="sendMessage" >
        </Button>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollViewLog"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:background="@drawable/border"
        android:padding="1dip"
        android:fadingEdgeLength="0dip">
        <TextView
            android:id="@+id/text_log"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:minLines="9"
            android:fadingEdge="none"
            android:fadingEdgeLength="0dip"
            android:layout_margin="2dip"
            android:paddingLeft="2dip"
            android:bufferType="editable">
        </TextView>
    </ScrollView>
</LinearLayout>
